extends ../shared/template
block title
  h1 New Alien
block content
  h2 Create a new alien
  .row
    .col-xs-6
      form(action='/aliens', method='post')
        .form-group
           label Name
           input.form-control(type='text', name='name')
        .form-group
            label Photo
            input.form-control(type='text', name='photo')
        .form-group
             label Planet
             input.form-control(type='text', name='planet')
        .form-group
            button.btn.btn-primary(type='submit') Submit
      .col-xs-6
